{
    "private": true,
    "workspaces": {
        "nohoist": [
            "**"
        ],
        "packages": [
            "packages/*",
            "examples/*"
        ]
    },
    "scripts": {
        "start": "yarn workspace react-agnostic build --watch",
        "start:cra": "yarn workspace cra start",
        "start:crna": "yarn workspace crna start",
        "test": "yarn workspace react-agnostic test",
        "precommit": "lint-staged",
        "pretty": "prettier --write \"./**/*.js\"",
        "nuke": "rimraf **/node_modules"
    },
    "lint-staged": {
        "*.js": [
            "yarn pretty",
            "git add"
        ]
    },
    "devDependencies": {
        "husky": "^2.4.0",
        "lint-staged": "^8.2.0",
        "prettier": "^1.18.0"
    }
}
